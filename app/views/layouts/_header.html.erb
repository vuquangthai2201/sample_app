<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample_app_text"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_text"), root_path %></li>
        <li><%= link_to t(".help_text"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".user_text"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".account_text") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile_text"), current_user %></li>
              <li><%= link_to t(".setting_text"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out_text"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in_text"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
