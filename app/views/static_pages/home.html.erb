<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
        <h3><%= t ".micropost_text" %></h3>
        <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".home_text1" %></h1>
  <h2>
    <%= t ".home_text2" %>
    <%= link_to t(".rails_link"), t(".rails_url") %>
    <%= t ".home_text3" %>
  </h2>
  <%= link_to t(".home_text4"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: t(".home_text5")), t(".ruby_url") %>
<% end %>
