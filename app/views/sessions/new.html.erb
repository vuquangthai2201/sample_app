<% provide(:title, t(".title")) %>
<h1> <%= t ".title" %> </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t(".email_text") %>
      <%= f.email_field t(".email_text"), class: "form-control" %>

      <%= f.label t(".password_text") %>
      <%= f.password_field t(".password_text"), class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit t(".title"), class: "btn btn-primary" %>
    <% end %>
    <p>New user? <%= link_to t(".sign_up_text"), signup_path %></p>
  </div>
</div>
